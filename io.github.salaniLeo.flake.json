{
    "app-id" : "io.github.salaniLeo.flake",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "flake",
    "finish-args" : [
        "--talk-name=org.freedesktop.Flatpak",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "build-options" : {
        "env" : {
            "V" : "1",
            "BASH_COMPLETIONSDIR" : "/app/share/bash-completion/completions",
            "MOUNT_FUSE_PATH" : "../tmp/"
        }
    },
    "cleanup" : [
        "/include",
        "/share/doc",
        "/share/gtk-doc"
    ],
    "modules" : [
	"assets/python-dependencies.json",
        {
            "name" : "flake",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SalaniLeo/Flake-flatpak-repo.git",
                    "tag" : "0.0.4",
                    "commit" : "a4498200cd83985404c186207af7d8a7f9a7adba"
                }
            ],
            "dependencies": [
                "python3",
                "python3-Pillow"
            ]
        }
    ]
}
