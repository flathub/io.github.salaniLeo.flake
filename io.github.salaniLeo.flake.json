{
    "app-id" : "io.github.salaniLeo.flake",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "43",
    "sdk" : "org.gnome.Sdk",
    "command" : "flake",
    "finish-args" : [
        "--talk-name=org.freedesktop.Flatpak",
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home"
    ],
    "build-options" : {
        "env" : {
            "V" : "1",
            "BASH_COMPLETIONSDIR" : "/app/share/bash-completion/completions",
            "MOUNT_FUSE_PATH" : "../tmp/"
        }
    },
    "cleanup" : [
        "/include",
        "/share/doc",
        "/share/gtk-doc"
    ],
    "modules" : [
	"assets/python-dependencies.json",
        {
            "name" : "flake",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/SalaniLeo/Flake-flatpak-repo.git",
                    "tag" : "0.1.0",
                    "commit" : "1afae11d4dd3693b7086a57fd3685d944e91e86d"
                }
            ],
            "dependencies": [
                "python3",
                "python3-Pillow"
            ]
        }
    ]
}
